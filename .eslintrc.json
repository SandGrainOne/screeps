{
    "extends": "standard",
    "plugins": [
        "screeps"
    ],
    "env": {
        "screeps/screeps": true
    },
    "globals": {
        "Empire": true,
        "os": true
    },
    "rules":{
        "semi": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "brace-style": ["error", "stroustrup"],
        "no-trailing-spaces": ["error", { "ignoreComments": true }]
    }
}
